<style>
  .imgIcon:hover{
    transition: transform 0.5s ease;
    transform: scale(1.1);
    
  }
</style>
<nav class="navbar navbar-expand-sm bg-body-light sticky-top moveing bg-body-tertiary" style="background-color: rgb(255, 255, 255);">
    <div class="container-fluid ">
      <div class="navDiv  ">
        <p>
          <a style="font-size: 2vw; margin-right: 0; position: absolute; top:30%; left: 8%  ;" 
              class="navbar-brand" href="/listing/home">
           <i style="position: absolute;" class="fa-solid fa-hotel appIcon"></i>
          </a>
        </p>
        <p><a class="nav-link" style="color:#fe424d ; font-size: 1.5vw; font-weight: bold; position: absolute; top:50%; left: 2%;" aria-current="page" href="/listing/home">travel.com</a></p>
      </div>
      <div class="search ">
        <form class="searchBar" action="/listing/search-list" method="post">
          <input class="innerSearch" name="title" id="title" type="text" placeholder="Search destinations" required >
          <div style="height: 40px; width: 2px; background-color: rgb(222, 222, 222) ;"></div>
          <input class="innerSearch" id="booking-date" style="display: flex; font-size: 1.15vw;" placeholder="Add Dates"  type="date"  >
          <div style="height: 40px; width: 2px; background-color: rgb(222, 222, 222) ;"></div>
          <div class="innerSearch" style="display: flex;">
            <input type="number" min="1" max="30"  style="width: 60%; height: 90%; padding-left: 1vw; border: none; font-size: 1.15vw; border-bottom-left-radius:40px ;border-top-left-radius:40px ;border-bottom-right-radius:40px ;border-top-right-radius:40px ;" placeholder="Add guests">
            <div style="margin-left: 1.5vw; width: 20%; height: 100%; border-radius: 50%;  display: flex; justify-content: center; align-items: center;">
              <button type="submit" style="border: none; background: none;"><i  class="fa-solid fa-magnifying-glass" style="font-size: 150%;"></i></button>
            </div>
          </div>
        </form>
      </div>
      <div class="btnSignup"  id="navbarNavAltMarkup">
        <div class="navbar-nav">
        <% if(!currUser){ %>
         <form action="/user/login" method="get">
            <button class="btn btn-primary btn-sm me-2 btnLogin ">Login</button>
          </form>
        <% } %>
        <% if(currUser){ %>
          <div class="userDiv" style="display: flex; width: 9vw; height: 8vh;">
            <div class="btn userDetailsbtn  btn-outline-black"
            id="circle" 
              onclick="toggleDropdown()"
              style="  width: 4vw; height: 4vw;  border-radius: 50%; background-color: #fe424d; color: white; font-weight: 500;
                font-size: 2vw; display: flex; justify-content: center; align-items: center;"> 
               <%= currUser.username[0] %>
            </div>
            <a href="/user/logout" class="btn userDetailsbtn btn-outline-danger" 
              style="font-size: 1vw; margin-left: 1vw; height: 4vw; width: 4vw;border-radius: 50%; display: flex; justify-content: center; 
              align-items: center;"> 
              Logout
            </a>
          </div>    
        <% } %>
        </div>
      </div>
    </div>
    <button  id="themeToggle" class="btn  btn-outline-secondary ms auto" style="position: absolute; left: 2%; top: 5%; width: 4rem; padding: 0;" onclick="toggleTheme()">
      &#127769;Dark
    </button>
</nav>
<% if(currUser){ %>
<div 
  id="dropdownBox" 
  class="hidden"
  style="background-color: #eeecec;
    position: absolute;
    z-index: 10000;  
    border: solid 1px rgb(243, 158, 158); 
    border-radius: 10px;
    width: 25vw; 
    height: 35vh;">
   
  <a style="position: absolute; left:30%; top:10%" href="/user/profile">Edit profile <i class="fas fa-pen-to-square " style="font-size: 1vw;"></i></a>
  <div style="margin-top: 7vh; margin-left: 2vw; margin-right: 2vw;"></div>
   <p style=" margin-left: 2vw; margin-right: 2vw; color: #fe424d;">Name: <% if(userDetails && userDetails.fullName){ %> <%= userDetails.fullName.firstName%> <% } %> </p>
   <p style=" margin-left: 2vw; margin-right: 2vw; color: #fe424d;">Mobile No.: <% if(userDetails && userDetails.phone){ %> <%= userDetails.phone%> <% } %></p>  
   <p style=" margin-left: 2vw; margin-right: 2vw; color: #fe424d;" >Address: <% if(userDetails && userDetails.address){ %> <%= userDetails.address%> <% } %></p>  
</div>
<% } %>